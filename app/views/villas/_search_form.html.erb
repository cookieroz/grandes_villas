<%= search_form_for @search do |f| %>
    <div class="span3">
      <%= f.select(
         :sleeps_gteq,
         %w[+2 +4 +6 +8 +10],
         { :include_blank => t("villas.index.selectsleep"), selected: params.try(:[], :q).try(:[], :sleeps_gteq) }
          ) %>
    </div>

    <div class="span3">
      <%= f.select(
        :bedrooms_gteq,
        %w[1 2 3 4 5 +6],
        { :include_blank => t("villas.index.selectbed"), selected: params.try(:[], :q).try(:[], :bedrooms_gteq) }
      ) %>
    </div>

    <div class="span3">
      <%= f.select(
        :locations_id_eq,
        options_from_collection_for_select(Location.order(:place).all, :id, :place, params.try(:[], :q).try(:[], :locations_id_eq)),
        { :include_blank => t("villas.index.selecttown") }) %>
    </div>
    <div class="span2">
      <p class="res-date">Start Date</p>
      <%= text_field_tag "start_date", params[:start_date],
                         class: "span2", "data-behaviour" => "datepicker" %>
    </div>
    <div class="span2">
      <p class="res-date">End Date</p>
      <%= text_field_tag "end_date", params[:end_date],
                         class: "span2", "data-behaviour" => "datepicker" %>
    </div>
    <div class="span2">
      <%= f.submit "Search", class: "btn btn-villa-search btn-large" %>
    </div>
<% end %>
