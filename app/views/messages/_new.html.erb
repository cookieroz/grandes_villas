<div class="contact-villa-form">
  <h3>Inquire about <%= @villa.name %> today!</h3>
  <%= form_for  :messages,
                :html => { :class => 'form-horizontal' } do |f| %>
      <div class="control-group">
        <%= f.label :name, class: "control-label" %>
        <div class="controls">
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :tlf, class: "control-label" %>
        <div class="controls">
          <%= f.text_field :tlf %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :email, class: "control-label" %>
        <div class="controls">
          <%= f.text_field :email %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :dates, class: "control-label" %>
        <div class="controls">
          <%= f.text_field :dates %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :adults, class: "control-label" %>
        <div class="controls">
          <%= f.text_field :adults %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :kids, class: "control-label" %>
        <div class="controls">
          <%= f.text_field :kids %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :content, "Message", class: "control-label" %>
        <div class="controls">
          <%= f.text_area :content, :rows => 5 %>
        </div>
      </div>
      <div class="actions center">
        <%= f.submit "Send Message", class: "btn btn-info" %>
      </div>
  <% end %>
</div>
