<% provide(:title, t("layouts.header.services")) %>

<h1 class="lead"><%= t "layouts.header.services" %></h1>

<%= image_tag("servicesimg.jpg", class: "center")  %>

<div class="row services-index">
  <div class="span8">
    <ul class="service-list-index unstyled">
      <% @services.each do |service| %>
        <li>
          <p class="lead"><%= link_to service.title, service %></p>
          <p> <%= raw truncate(strip_tags(service.content), :length => 380) %> </p>
          <% if current_user %>
              <%= link_to 'Show', service,
                          class: 'btn' %>
              <%= link_to 'Edit', edit_service_path(service),
                          class: 'btn btn-primary' %>
              <%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' },
                          class: 'btn btn-danger' %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="span4">
    <%= render 'messages/service_form' %>
  </div>
</div>

<% if current_user %>
    <%= link_to 'Create New Service', new_service_path,
                class: 'btn btn-warning btn-large' %>
<% end %>

