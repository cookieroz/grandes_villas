<% provide(:title, @costa_tropical.title ) %>

<h2 class="villa-h2-bg"> <%= @costa_tropical.title %> </h2>

<div class="row">
  <div class="span6 pull-left">
    <%= image_tag(@costa_tropical.ct_image_url, class: 'thumbnail') %>
  </div>
  <div class="span6">
     <div class="well well-large">
       <dl class="dl-horizontal costa">
         <dt>City: </dt>
         <dd><%= @costa_tropical.city %></dd>

         <dt>Category: </dt>
         <dd><%= @costa_tropical.category %></dd>

         <dt>Activity: </dt>
         <dd><%= @costa_tropical.activity %></dd>
       </dl>
     </div>
  </div>
</div>

<hr />

<div class="row">
   <div class="costa-description span12">
     <%= raw @costa_tropical.content %>
   </div>
</div>

<% if current_user %>
    <%= link_to 'Edit', edit_costa_tropical_path(@costa_tropical) %> |
<% end %>
<%= link_to 'Back', costa_tropicals_path %>
